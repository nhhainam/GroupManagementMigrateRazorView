@page
@model GroupManagementProject.Pages.Groups.AddGroupModel
@using GroupManagementProject.Entity
@{
    User curUser = (User)ViewData["curUser"];
    var MessAddGroup = ViewData["MessAddGroup"];
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>HomePage</title>

    <!-- Custom fonts for this template-->
    <script src="https://kit.fontawesome.com/aca8a481b2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-laugh-wink"></i>
            </div>
            <div class="sidebar-brand-text mx-3">Labor</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Welcome
            </div>


            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item active">
                <a class="nav-link" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                   aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Groups</span>
                </a>
                <div id="collapseUtilities" class="collapse show" aria-labelledby="headingUtilities"
                     data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="/Home">View your groups</a>
                        <a class="collapse-item active" href="/Groups/AddGroup">Create a group</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Account/ViewInvitation">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Your invitation</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@curUser.Fullname</span>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="~/Account/Logout">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->

                <div class="container-fluid">
                    <br /><br />
                    <svg xmlns="http://www.w3.org/2000/svg" height="60" width="101">
                        <path stroke-width="2" stroke="#DBDBDB" fill="#F0F0F0" d="M99.355 6.607l-6.89 48.23c-.191 1.338-1.801 1.915-2.799 1.005L36.842 7.61c-1.134-1.036-.402-2.924 1.133-2.924H97.69c1.024 0 1.81.906 1.665 1.92z"></path>
                        <path stroke-linejoin="round" stroke-width="2" stroke="#DBDBDB" fill="#fff" d="M47.939 12.997a1 1 0 00.965.74h41.487c.929 0 1.682.753 1.682 1.682v41.564c0 .929-.753 1.682-1.682 1.682h-67.71A1.682 1.682 0 0121 56.983V15.42c0-.072.005-.143.013-.211.01-.083.01-.166 0-.248A1.706 1.706 0 0121 14.75V2.682C21 1.752 21.753 1 22.682 1H43.42c.76 0 1.426.51 1.623 1.244l2.896 10.753z"></path>
                        <circle stroke-width="2" stroke="#6E49CB" fill="#fff" r="20" cy="30" cx="21"></circle>
                        <circle fill="#6E49CB" r="17" cy="30" cx="21"></circle>
                        <circle fill-opacity=".9" fill="#fff" r="17" cy="30" cx="21"></circle>
                        <path stroke-linecap="round" stroke-width="2" stroke="#6E49CB" d="M21 37V23m-7 7h14"></path>
                    </svg> <h1>Create Group</h1>
                    <div class="card">
                        <p>Groups allow you to manage and collaborate across multiple projects.</p>
                        <p>Members of a group have access to all of its projects.</p>
                        <h6 class="text-danger">@MessAddGroup</h6>
                        <br />
                        <form method="post" class="form-addgroup">
                            <table class="table table-striped">
                                <tr>
                                    <td style="width: 30%;"><strong>Group Name</strong></td>
                                    <td style="width: 70%;">
                                        <input pattern="[^' ']+" class="form-control" type="text" name="groupname" required>
                                        <div class="invalid-feedback">
                                            Not blank and no space at beginning or ending
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Description</strong></td>
                                    <td>
                                        <textarea pattern="[^' ']+" class="form-control" type="text" name="description" required></textarea>
                                        <div class="invalid-feedback">
                                            Not blank and no space
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Visibility level</strong></td>
                                    <td>
                                        <input type="radio" id="statePrivate" name="state" value="Private" checked>
                                        <i class="fas fa-lock"></i><label for="statePrivate">Private</label>
                                        <p> The group and its projects can only be viewed by members.  </p>
                                        <input type="radio" id="statePublic" name="state" value="Public">
                                        <i class="fas fa-globe"></i><label for="statePublic">Public</label>
                                        <p> The group and any public projects can be viewed without any authentication.</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Purpose</strong></td>
                                    <td>
                                        <select style="height:28px;" name="purpose" id="purpose">
                                            <option value="I want to manage my projects well">I want to manage my projects well </option>
                                            <option value="I want to create a community for my social project">I want to create a community for my social project</option>
                                            <option value="I want to store my activity in project">I want to store my activity in project</option>
                                            <option value="I want to explore GitLab to see if it’s worth switching to">I want to explore GitLab to see if it’s worth switching to </option>
                                            <option value="A different reason">A different reason </option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <input type="submit" value="Add Group" class="btn btn-primary">
                                        <input type="reset" value="Reset" class="btn btn-info" />
                                    </td>
                                </tr>

                            </table>
                        </form>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>

</html>
