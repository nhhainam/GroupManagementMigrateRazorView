@model GroupManagementProject.Pages.RegisterModel
@{
    var usernameRegis = ViewData["usernameRegis"];
    var fullnameRegis = ViewData["fullnameRegis"];
    var emailRegis = ViewData["emailRegis"];
    var passwordRegis = ViewData["passwordRegis"];
    var repasswordRegis = ViewData["repasswordRegis"];
    var MessRegis = ViewData["MessRegis"];
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
